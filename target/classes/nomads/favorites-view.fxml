<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="nomads.FavoritesController">
    <center>
        <AnchorPane fx:id="anchorPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #B1D4E0;"
                    BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="favlistView" layoutX="200.0" layoutY="94.0" prefHeight="200.0" prefWidth="200.0"
                          AnchorPane.topAnchor="94.0"/>
                <Label fx:id="ListFavTitle" layoutX="212.0" layoutY="22.0" text="List of Favorites "
                       textAlignment="CENTER" underline="true">
                    <font>
                        <Font name="Arial" size="24.0"/>
                    </font>
                </Label>
                <Button fx:id="removeDestButton" layoutX="227.0" layoutY="312.0" mnemonicParsing="false"
                        onAction="#onRemoveDestClicked" text="Remove From Favorites"/>
                <Label fx:id="warningLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="167.0" layoutY="62.0"
                       prefHeight="17.0" prefWidth="249.0" textFill="#f20000"/>
            </children>
        </AnchorPane>
    </center>
    <top>
        <ButtonBar fx:id="ButtonBar" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #D4F1F4;"
                   BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="SearchDestButton" mnemonicParsing="false" onAction="#onSearchDestClicked"
                        style="-fx-background-color: #D4F1F4;" text="Search Destinations"/>
                <Button fx:id="favButton" mnemonicParsing="false" onAction="#onFavButtonClicked"
                        style="-fx-background-color: #D4F1F4;" text="Favorites"/>
                <Button fx:id="updateUserButton" mnemonicParsing="false" onAction="#onUpdateUserClicked"
                        style="-fx-background-color: #D4F1F4;" text="Update User Info"/>
                <Button fx:id="quitButton" mnemonicParsing="false" onAction="#onQuitButtonClicked"
                        style="-fx-background-color: #D4F1F4;" text="Quit"/>
            </buttons>
        </ButtonBar>
    </top>
</BorderPane>

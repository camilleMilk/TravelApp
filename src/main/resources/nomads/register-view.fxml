<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="nomads.RegisterController">
    <right>
        <AnchorPane prefHeight="400.0" prefWidth="419.0" style="-fx-background-color: #D4F1F4;"
                    BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="68.0" layoutY="205.0" text="Username:"/>
                <Label layoutX="68.0" layoutY="240.0" text="Password:"/>
                <TextField fx:id="firstNameTextField" layoutX="157.0" layoutY="88.0" promptText="First Name"/>
                <TextField fx:id="lastNameTextField" layoutX="156.0" layoutY="124.0" promptText="Last Name"/>
                <TextField fx:id="usernameTextField" layoutX="156.0" layoutY="200.0" promptText="Username"/>
                <PasswordField fx:id="passwordPasswordField" layoutX="156.0" layoutY="235.0" promptText="Password"/>
                <Label layoutX="103.0" layoutY="26.0" text="Traveller Registration">
                    <font>
                        <Font name="Arial" size="25.0"/>
                    </font>
                </Label>
                <Button fx:id="registerButton" layoutX="78.0" layoutY="341.0" mnemonicParsing="false"
                        onAction="#onRegisterButtonClicked" style="-fx-background-color: #05445E;" text="Register"
                        textFill="#fcf7f7"/>
                <Label fx:id="warningLabel" alignment="CENTER" layoutX="67.0" layoutY="62.0" prefHeight="17.0"
                       prefWidth="271.0" textFill="#e10909" AnchorPane.leftAnchor="67.0" AnchorPane.rightAnchor="41.0"/>
                <Label layoutX="68.0" layoutY="167.0" text="Nationality:"/>
                <Label layoutX="68.0" layoutY="128.0" text="Last Name:"/>
                <CheckBox fx:id="outdoorsCheckBox" layoutX="156.0" layoutY="277.0" mnemonicParsing="false"
                          onAction="#onOutdoorsCheckBoxClicked" text="Outdoors"/>
                <Label layoutX="68.0" layoutY="277.0" text="Preferences:"/>
                <CheckBox fx:id="urbanCheckBox" layoutX="249.0" layoutY="277.0" mnemonicParsing="false"
                          onAction="#onUrbanCheckBoxClicked" text="Urban"/>
                <CheckBox fx:id="culturalCheckBox" layoutX="156.0" layoutY="308.0" mnemonicParsing="false"
                          onAction="#onCulturalCheckBoxClicked" text="Cultural"/>
                <CheckBox fx:id="foodCheckBox" layoutX="249.0" layoutY="308.0" mnemonicParsing="false"
                          onAction="#onFoodCheckBoxClicked" text="Food"/>
                <ComboBox fx:id="nationalityComboBox" layoutX="156.0" layoutY="161.0"
                          onAction="#getNationalityComboBoxSelected" opacity="0.71" prefHeight="26.0" prefWidth="159.0"
                          promptText="Nationality" style="-fx-background-color: #FFFFFF;"/>
                <Label layoutX="69.0" layoutY="92.0" text="First Name:"/>
                <Button fx:id="loginButton" layoutX="197.0" layoutY="341.0" mnemonicParsing="false"
                        onAction="#onLoginButtonClicked" style="-fx-background-color: #D4F1F4;"
                        text="Already have an account?" textFill="#1048e4"/>
            </children>
        </AnchorPane>
    </right>
    <left>
        <AnchorPane prefHeight="400.0" prefWidth="182.0" style="-fx-background-color: #05445E;"
                    BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="49.0" layoutY="108.0" text="Nomad" textFill="#fcf9f9">
                    <font>
                        <Font name="Arial Bold" size="25.0"/>
                    </font>
                </Label>
                <Label layoutX="45.0" layoutY="148.0" text="Travels Co." textFill="#f5efef">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                </Label>
                <Label layoutX="6.0" layoutY="352.0" text="Copyright (c). All Rights Reserved " textFill="#f5f0f0">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>
</BorderPane>
